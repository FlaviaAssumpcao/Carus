<section class="d-flex">
<div class="col-1 img-form">
 <%= image_tag "/assets/blue.jpeg"%>
</div>

<div class="col-2 parent-form position-relative">
<p class="sign-up"> Already a member <%= link_to "Sign in!", new_session_path(resource_name)%></p>
<h2>Join Carus</h2>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                error: 'First name is mandatory, please specify one',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first-name" }%>
    <%= f.input :last_name,
                error: 'Last name is mandatory, please specify one',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last-name" }%>
    <%= f.input :date_of_birth,
                label: 'Date of birth',
                as: :date, start_year: Date.today.year - 100,
                        end_year: Date.today.year - 18,
                        order: [:day, :month, :year],
                required: true,
                autofocus: true,
                input_html: { autocomplete: "date-of-birth" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up",class:"btn-big" %>
  </div>
<% end %>

</div>

</section>
