<section class="container">
<div id="col-1">
<p>this is the right side</p>
</div>


<div id="col-2">
<h2>Join Carus</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name,
                error: 'First name is mandatory, please specify one',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "first-name" }%>
    <%= f.input :last_name,
                error: 'Last name is mandatory, please specify one',
                required: true,
                autofocus: true,
                input_html: { autocomplete: "last-name" }%>
    <%= f.input :date_of_birth,
                label: 'Date of birth',
                as: :date, start_year: Date.today.year - 100,
                        end_year: Date.today.year - 18,
                        order: [:day, :month, :year],
                required: true,
                autofocus: true,
                input_html: { autocomplete: "date-of-birth" }%>
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up",class:"btn-big" %>
  </div>
<% end %>

</div>
