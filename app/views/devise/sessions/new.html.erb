<section class="d-flex">
  <div class="col-1 img-form">
    <%= image_tag "/assets/yellow.jpeg"%>
  </div>


  <div class="col-2 parent-form position-relative">
  <p class="sign-up"> Not a member <%= link_to "Sign up!", new_registration_path(resource_name)%></p>
    <h2 style="color:#0278AE">Welcome Back!</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Sign in", class:"btn-big" %>
      </div>
    <% end %>
  </div>
</section>
