<div class="container d-flex" style="background-color: #e8ffc1d2; border-radius: 8px; padding: 10px; border: none; align-items: center; width: 1210px;">
<br>
  <div class="cards col-sm-6" style="width: 40rem; padding: 50px; border: none;">
    <div>
      <div class="logo" style="margin-bottom: 20px;">
        <%= carus_image(@nonprofit.logo) %>
      </div>
    <br>

    <%= link_to favorites_path(nonprofit_id: @nonprofit.id), data: { turbo_method: :post } do %>
      <i class="fa-regular fa-heart"></i>
    <% end %>

      <div style="margin-bottom: 30px">
        <h3><strong><%= @nonprofit.name %></strong></h3>
        <h5><%= @nonprofit.city %></h5>
        <p><%= @nonprofit.email %></p>
        <p><%= @nonprofit.phone %></p>
        <p><%= @nonprofit.full_description %></p>
        <p><%= @nonprofit.address %></p>
      </div>
    </div>

    <div class="card" style="width: 30rem; background-color: #ffffff; border-radius: 7px; padding: 20px; border: none;">
      <ul>
        <% if @nonprofit.goods_categories.present? %>
        <p><strong>Accepts the following types of goods:</strong></p>
          <% @goods_categories.each do |goods_category| %>
            <% if goods_category.name != 'Multiple categories' %>
              <li>
                <%= goods_category.name%>
              </li>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
    <br>
    <div class="card" style="width: 30rem; background-color: #ffffff; border-radius: 7px; padding: 20px; border: none;">
      <ul>
        <% if @nonprofit.time_categories.present? %>
        <p><strong>Has volunteering programs in the following areas:</strong></p>
          <% @time_categories.each do |time_category| %>
            <% if time_category.name != 'Multiple categories' %>
              <li>
                <%= time_category.name%>
              </li>
            <% end %>
          <% end %>
        <% end %>
      </ul>
    </div>
    <br>
    <div>
      <%= link_to 'Donate', new_nonprofit_donation_path(@nonprofit), class: "btn btn-big" %>
    </div>
  </div>
  <br>


  <div class="col-sm-6" style="width: 40rem; border: none;">
    <div>
       <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <ol class="carousel-indicators">
          <% @nonprofit.photos.each_with_index do |photo, index|%>
            <button  type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="<%= index %>" class="<%= "active" if index == 0 %>"></button>
          <% end %>
        </ol>
        <div class="carousel-inner">
          <% @nonprofit.photos.each_with_index do |photo, index|%>
            <div class="carousel-item <%= "active" if index == 0 %>">
              <%= carus_image(photo) %>
            </div>
          <% end %>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-slide="prev"  data-bs-target="#carouselExampleIndicators">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-slide="next"   data-bs-target="#carouselExampleIndicators">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </button>
      </div>

    </div>
    <br>

    <div id="map" style="width: 500px; height: 400px; margin-top: 20px"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
