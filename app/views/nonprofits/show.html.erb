<div class="container d-flex" style="background-color: #e8ffc1b9; border-radius: 8px; border: none; width: 1150px; box-shadow: (0px 4px 4px rgba(0, 0, 0, 0.25)); justify-content: space-between; align-items: center;
">

  <br>


  <div class="cards col-sm-6" style="width: 30rem; padding: 30px; border: none;">
    <div>
      <div class="logo" style="margin-bottom: 20px;">
        <%= carus_image(@nonprofit.logo) %>
      </div>

      <br>

      <div style="margin-bottom: 30px;">
        <h3><strong><%= @nonprofit.name %></strong></h3>
        <h5><%= @nonprofit.city %></h5>
        <p><%= @nonprofit.email %></p>
        <p><%= @nonprofit.phone %></p>
        <p><%= @nonprofit.full_description %></p>
        <p><%= @nonprofit.address %></p>
      </div>
    </div>

    <div class="card" style="width: 30rem; background-color: #ffffff; border-radius: 8px; padding: 15px; border: none;">
        <ul>
          <p><strong>Accepts the following goods types:</strong></p>
          <% if @nonprofit.goods_categories.present? %>
            <% @goods_categories.each do |goods_category| %>
                  <li>
                    <%= goods_category.name%>
                  </li>
            <% end %>
          <% end %>
        </ul>
    </div>

    <br>

    <div class="card" style="width: 30rem; background-color: #ffffff; border-radius: 8px; padding: 15px; border: none; margin-bottom: 20px">
        <ul>
          <p><strong>Accepts VOLUNTEER for:</strong></p>
          <% if @nonprofit.time_categories.present? %>
            <% @time_categories.each do |time_category| %>
              <li>
                <%= time_category.name%>
              </li>
            <% end %>
          <% end %>
        </ul>
    </div>

    <br>

    <div>
      <%= link_to 'Donate', new_nonprofit_donation_path(@nonprofit), class: "btn btn-big" %>
    </div>
  </div>

  <br>

  <div class="col-sm-6" style="width: 450px; border: none;">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1604040605063-8323c2b450cf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://images.unsplash.com/photo-1604040605063-8323c2b450cf?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=387&q=80" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src=".../800x400?auto=yes&bg=555&fg=333&text=Third slide" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>


    <br>

    <div id="map" style="width: 450px; height: 280px; margin-top: 20px; border-radius: 8px;"
        data-controller="map"
        data-map-markers-value="<%= @markers.to_json %>"
        data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>

  </div>
</div>
